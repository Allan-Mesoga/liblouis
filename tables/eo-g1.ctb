include digits6Dots.uti
include litdigits6Dots.uti

include braille-patterns.cti

# Characters consisting of more than one Braille cell
punctuation [  2356-2356
punctuation ] 2356-2356
punctuation — 6-36
punctuation … 3-3-3

# Braille Indicators
numsign 3456  number sign
capsletter 46
begcapsword 46-46
endcapsword 46-3

# Punctuation rules
prepunc " 236
postpunc " 356
