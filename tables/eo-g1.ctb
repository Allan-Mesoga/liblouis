include spaces.uti

punctuation ! 235		EXCLAMATION MARK
punctuation ' 3		APOSTROPHE
punctuation ( 2356		LEFT PARENTHESIS
punctuation ) 2356		RIGHT PARENTHESIS
punctuation , 2		COMMA
punctuation - 36		HYPHEN-MINUS
punctuation . 256		FULL STOP
punctuation : 25		COLON
punctuation ; 23		SEMICOLON
punctuation ? 26		QUESTION MARK
punctuation " 236
punctuation / 34
punctuation * 35

# Don't include latinLetterDef6Dots.uti
# In theory, the exceptions can be handled, but the risk is greater.

lowercase a 1
lowercase b 12
lowercase c 14
lowercase ĉ 146		LATIN LETTER C WITH CIRCUMFLEX
lowercase d 145
lowercase e 15
lowercase f 124
lowercase g 1245
lowercase ĝ 12456		LATIN LETTER G WITH CIRCUMFLEX
lowercase h 125
lowercase ĥ 1256		LATIN LETTER H WITH CIRCUMFLEX
lowercase i 24
lowercase j 245
lowercase ĵ 2456		LATIN LETTER J WITH CIRCUMFLEX
lowercase k 13
lowercase l 123
lowercase m 134
lowercase n 1345
lowercase o 135
lowercase p 1234
lowercase q 12345
lowercase r 1235
lowercase s 234
lowercase ŝ 2346		LATIN LETTER S WITH CIRCUMFLEX
lowercase t 2345
lowercase u 136
lowercase ŭ 346		LATIN LETTER U WITH BREVE
lowercase v 1236
lowercase w 23456
lowercase x 1346
lowercase y 13456
lowercase z 1356

